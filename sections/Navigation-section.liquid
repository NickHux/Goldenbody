<section class="navigation-sec {{ section.settings.section-class }}">
  <div class="container">
        <div class="row">
            <div class="col-12">
               <div class="navigate-btns">
                 {% if section.blocks != blank %}
                  {% for block in section.blocks %}
                    <div class="navigation-contain">
                       <a href="{{ block.settings.button-url }}" class="btn-red all-screens">
                        <span>{{ block.settings.button-text }}</span>
                        <i class="fa fa-arrow-left"></i>
                       </a>
                    </div>
                  {% endfor %}
                 {% endif %}
               </div>
            </div>
        </div>
    </div>
</section>

{% schema %}
    {
    "name": "Navigation-section",
    "class": "Navigation-section",
    "settings": [
    {
      "type": "text",
      "id": "section-class",
      "label": "Section Class"
    }
    ],
    "blocks": [
      {
        "type": "slides",
        "name": "slides",
        "settings": [
          {
            "type": "url",
            "id": "button-url",
            "label": "Button Url"
          },
          {
            "type": "text",
            "id": "button-text",
            "label": "Button Text"
          }
        ]
      }
    ],   
    "presets": [
    {
    "category": "Navigation-section",
    "name": "Navigation-section"
    }
    ]
    }
{% endschema %}