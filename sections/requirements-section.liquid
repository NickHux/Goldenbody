<section class="requirement-section" id="{{ section.settings.section-id }}">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-5">
        <h2>{{ section.settings['main-title'] }}</h2>
        <div class="requirement-list">
          {{ section.settings.content }}
        </div>
        <div class="requirement-btn">
          <a href="{{ section.settings.button-url }}" class="btn-red"
            ><span>{{ section.settings['button-text'] }}</span><i class="fa fa-arrow-left"></i
          ></a>
        </div>
      </div>
      <div class="col-md-7">
        <div class="img-box">
          {{
            section.settings.image_picker
            | image_url: width: section.settings.image_picker.width
            | image_tag: widths: '200, 300, 400, 600', 
            alt: section.settings['main-title']
          }}
          {% comment %} <img src="{{ section.settings.image_picker | img_url: 'master' }}">  {% endcomment %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Requirement-section",
  "class": "Requirement-section",
  "settings": [
    {
      "type": "text",
      "id": "section-id",
      "label": "Section Id"
    },
    {
      "type": "text",
      "id": "main-title",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "url",
      "id": "button-url",
      "label": "Button Url"
    },
    {
      "type": "text",
      "id": "button-text",
      "label": "Button Text"
    },
    {
      "type": "image_picker",
      "id": "image_picker",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "category": "Requirement-section",
      "name": "Requirement-section"
    }
  ]
}
{% endschema %}
