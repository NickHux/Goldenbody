<section class="Right-Image-Left-Text bottomright">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h2>{{ section.settings.main-title }}</h2>
        <p>{{ section.settings.content }}</p>
      </div>
      <div class="col-md-6">
        <div class="img-box">
          {{ section.settings.image_picker | image_url: width: section.settings.image_picker.width | image_tag: widths: '246, 493, 600, 713, 823, 990, 1100, 1206, 1346, 1426, 1646, 1946', class: ' ', alt: section.settings.image_picker.alt }}
          {% comment %} <img src="{{ section.settings.image_picker | img_url: 'master' }}">  {% endcomment %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Right-Image-Left-Text",
  "class": "Right-Image-Left-Text",
  "settings": [
    {
      "type": "text",
      "id": "main-title",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "image_picker",
      "id": "image_picker",
      "label": "Image"
    },
  ],
  "presets": [
    {
      "category": "Right-Image-Left-Text",
      "name": "Right-Image-Left-Text"
    }
  ]
}
{% endschema %}
