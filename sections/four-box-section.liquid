
<section class="four-box-sec" id="{{ section.settings.section-id }}">
  <div class="container">
        <div class="row">
            <div class="col">
                <h2>{{ section.settings.heading_text }}</h2>
                <div class="four-boxes mobile-carousel" >
                   {% if section.blocks != blank %}
                    {% for block in section.blocks %}
                    <div class="four-box">
                        <div class="four-box-img">
                          {{ block.settings.image | image_url: width: block.settings.image.width | image_tag: widths: '246, 493, 600', class: ' ', alt: block.settings.image.alt }}
                          {% comment %} <img src="{{ block.settings.image | img_url: 'master' }}"> {% endcomment %}
                        </div>
                        <h5>{{ block.settings.title }}</h5>
                        <div class="four-box-des">
                        {{ block.settings.description }}
                        </div>
                    </div>
                   {% endfor %}
                  {% endif %}   
                </div>
            </div>
        </div>
    </div>
</section>

  

{% schema %}
    {
    "name": "four-box-sec",
    "class": "four-box-sec",
    "settings": [
      {
        "type": "text",
        "id": "section-id",
        "label": "Section ID"
      },
      {
        "type": "text",
        "id": "heading_text",
        "label": "Heading Text",
      }
    ], 
    "blocks": [
      {
      "type": "slides",
      "name": "slides",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
          },
          {
          "type": "text",
          "id": "title",
          "label": "Title"
          },
          {
          "type": "richtext",
          "id": "description",
          "label": "Description"
          }
        ]
      }
    ],   
    "presets": [
    {
    "category": "four-box-sec",
    "name": "four-box-sec"
    }
    ]
    }
{% endschema %}