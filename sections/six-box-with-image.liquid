<section class="six-box-section" id="{{ section.settings.section-id }}">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h2>{{ section.settings.main-title }}</h2>
        <div class="square-boxes mobile-carousel">
        {% if section.blocks != blank %}
        {% for block in section.blocks %}
          <div class="square-box">
            <h5>{{ block.settings.heading }}</h5>
            <div class="square-box-des">
               {{ block.settings.description }}
            </div>
          </div>
        {% endfor %}
      {% endif %}
      </div>
      </div>
      <div class="col-md-6">
        <div class="img-box">
          {{ section.settings.image | image_url: width: section.settings.image.width | image_tag: widths: '246, 493, 600, 713, 823, 990, 1100', class: ' ', alt: ' ' }}
          {% comment %} <img src="{{ section.settings.image | img_url: 'master' }}">  {% endcomment %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Six-box-section",
  "class": "Six-box-section",
  "settings": [
    {
      "type": "text",
      "id": "section-id",
      "label": "Section id"
    },
    {
      "type": "text",
      "id": "main-title",
      "label": "Title"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "blocks": [
    {
      "type": "slides",
      "name": "slides",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        },
      ]
    }
  ],
  "presets": [
    {
      "category": "Six-box-section",
      "name": "Six-box-section"
    }
  ]
}
{% endschema %}
